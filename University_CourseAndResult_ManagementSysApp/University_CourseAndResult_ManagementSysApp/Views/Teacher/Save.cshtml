@using University_CourseAndResult_ManagementSysApp.Models.ViewModel
@model University_CourseAndResult_ManagementSysApp.Models.ViewModel.Teacher
@{
    ViewBag.Title = "Save";
    Layout = "~/Views/Shared/_Layout.cshtml";
    List<Department> listOfDepartments = ViewBag.listOfDepartments;
    listOfDepartments.Insert(0, new Department(null,"AAA","--Select--"));
}
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />

@using (Html.BeginForm())
{
    <fieldset>
        <legend>Save Teacher</legend>
        <div class="form-horizontal">
            <div class="form-group">
                @Html.LabelFor(teacher =>teacher.Name, new { @class = "col-sm-2 control-label"})
                <div class="col-sm-10">
                    @Html.TextBoxFor(teacher => teacher.Name, new {@class = "form-control", @placeholder="Teacher Name"})
                    @Html.ValidationMessageFor(teacher => teacher.Name)
                </div>
            </div>
            
            <div class="form-group">
                @Html.LabelFor(teacher => teacher.Address, new { @class = "col-sm-2 control-label" })
                <div class="col-sm-10">
                    @Html.TextAreaFor(teacher => teacher.Address, new { @class = "form-control", @placeholder = "Teacher Address" })
                    @Html.ValidationMessageFor(teacher => teacher.Address)
                </div>
            </div>
            
            <div class="form-group">
                @Html.LabelFor(teacher => teacher.Email, new { @class = "col-sm-2 control-label" })
                <div class="col-sm-10">
                    @Html.TextBoxFor(teacher => teacher.Email, new { @class = "form-control", @placeholder = "Teacher Email" })
                    @Html.ValidationMessageFor(teacher => teacher.Email)
                </div>
            </div>
            
            <div class="form-group">
                @Html.LabelFor(teacher => teacher.ContactNo, new { @class = "col-sm-2 control-label" })
                <div class="col-sm-10">
                    @Html.TextBoxFor(teacher => teacher.ContactNo, new { @class = "form-control", @placeholder = "Teacher Contact Number" })
                    @Html.ValidationMessageFor(teacher => teacher.ContactNo)
                </div>
            </div>
            
            <div class="form-group">
                @Html.LabelFor(teacher => teacher.Designation, new { @class = "col-sm-2 control-label" })
                <div class="col-sm-10">
                    @Html.DropDownListFor(teacher => teacher.Designation, new SelectList(ViewBag.getAllDesignation,"Value","Text"), htmlAttributes: new {@class="form-control"})
                    @Html.ValidationMessageFor(teacher => teacher.Designation)
                </div>
            </div>
            
            <div class="form-group">
                @Html.LabelFor(teacher => teacher.DepartmentId, new { @class = "col-sm-2 control-label" })
                <div class="col-sm-10">
                    @Html.DropDownListFor(teacher => teacher.DepartmentId, new SelectList(ViewBag.listOfDepartments, "Id", "Name"), htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(teacher => teacher.DepartmentId)
                </div>
            </div>
            
            <div class="form-group">
                @Html.LabelFor(teacher => teacher.CreditToBeTaken, new { @class = "col-sm-2 control-label" })
                <div class="col-sm-10">
                    @Html.TextBoxFor(teacher => teacher.CreditToBeTaken, new { @class = "form-control", @placeholder = "Teacher Total Credit" })
                    @Html.ValidationMessageFor(teacher => teacher.CreditToBeTaken)
                </div>
            </div>
            
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
                <h3>@ViewBag.message</h3>
            </div>
        </div>
    </fieldset>
}

@section scripts
{
    
    <script src="~/Scripts/jquery-3.1.1.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
}

